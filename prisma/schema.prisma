generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OrderUser {
  user_id Int     @id @default(autoincrement())
  name    String
  orders  Order[]
}

model Order {
  order_id Int         @id @default(autoincrement())
  user_id  Int
  date     DateTime
  total    Float
  user     OrderUser   @relation(fields: [user_id], references: [user_id])
  products OrderItem[]
}

enum EnumStatus {
  DONE
  NEED_ATTENTION
}

model OrderItem {
  id         Int         @id @default(autoincrement())
  order_id   Int
  order      Order       @relation(fields: [order_id], references: [order_id])
  value      Float
  product_id Int
  comments   String?
  status     EnumStatus?
}
